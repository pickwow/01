		<script type="text/javascript">
			window.onload = function() {
				var bgc = document.getElementsByClassName('chcol');
				var col = document.getElementById('col');
				var borcc = document.getElementById('borCc');
				var zhankai1 = document.getElementById('zhankai1');
				var guanbi1 = document.getElementById('guanbi1');
				var zhuti = document.getElementById('zhuti');
				
				var aMx = document.getElementsByClassName('maomixinxi');
				var zhankai = document.getElementsByClassName('zhankai');
				var heshang = document.getElementsByClassName('heshang');
				var xiayi=document.getElementById('xiayi');
				xiayi.style.bottom='0px';
				for(var x=0;x<heshang.length;x++)
				{
					heshang[x].style.display='none';
				}
				
				for (var i=0;i<zhankai.length;i++) {
					zhankai[i].index=i;
					zhankai[i].onclick=function(){
							for (var i = 0;i<aMx.length;i++) {
								aMx[i].style.height='44px';
							}
							
							for (var i = 0;i<heshang.length;i++) {
								heshang[i].style.display='none';
							}
							for (var i = 0;i<zhankai.length;i++) {
								zhankai[i].style.display='block';
							}
							
							
							
						this.style.display='none';
						aMx[this.index].style.height='150px';
						heshang[this.index].style.display='block';
						xiayi.style.bottom='-100px';
					}
				}
				for (var i=0;i<heshang.length;i++) {
					heshang[i].index=i;
					heshang[i].onclick=function(){
						
						this.style.display='none';
						aMx[this.index].style.height='44px';
						zhankai[this.index].style.display='block';
						xiayi.style.bottom='0px';
					}
				}
				
				
				
				

				zhankai1.onclick = function() {
					zhankai1.style.display = 'none';
					guanbi1.style.display = 'block';
					zhuti.style.right = '0px';
				}
				guanbi1.onclick = function() {
					guanbi1.style.display = 'none';
					zhankai1.style.display = 'block';
					zhuti.style.right = '-200px';
				}

				col.onchange = function() {
					for(var i = 0; i < bgc.length; i++) {
						bgc[i].style.backgroundColor = this.value;
						bgc[i].style.borderColor = this.value;
						borcc.style.borderColor = this.value;

					}

				}

				var mao1 = document.getElementById('mao1');
				var mao2 = document.getElementById('mao2');
				var mao3 = document.getElementById('mao3');
				var mao3img = document.getElementsByClassName('mao3_img');
				var zuo = document.getElementById('zuo');
				var you = document.getElementById('you');
				var mao3in = document.getElementById('mao3in');
				var mao1in = document.getElementById('mao1in');
			    mao3in.style.left = '0px';

				zuo.onclick = function() {
					if(mao3in.offsetLeft <= -500) {
						mao3in.style.left = '0px';
					} else {
						mao3in.style.left = mao3in.offsetLeft - 85 + 'px';
					}

				}
				you.onclick = function() {
					if(mao3in.offsetLeft >= 0) {
						mao3in.style.left = '-500px';
					} else {
						mao3in.style.left = mao3in.offsetLeft + 85 + 'px';
					}

				}

				mao1.onmousemove = function(ev) {
					var ev = ev || event;
					//X轴坐标控制

					if(ev.pageX < 337.5) {
						mao1in.style.left = '-1px';
						mao2.style.backgroundPositionX = '0px';
					} else if(ev.pageX > 562.5) {
						mao1in.style.right = '0px';
						mao2.style.backgroundPositionX = '-900px';
					} else {
						mao1in.style.left = (ev.pageX - 337.5) + 'px';
						mao2.style.backgroundPositionX = -4 * (ev.pageX - 337.5) + 'px';
					}

					//Y轴坐标控制

					if(ev.pageY < 356.5) {
						mao1in.style.top = '0px';
						mao2.style.backgroundPositionY = '0px';
					} else if(ev.pageY > 581.5) {
						mao1in.style.bottom = '0px';
						mao2.style.backgroundPositionY = '-900px';
					} else {
						mao1in.style.top = (ev.pageY - 356.5) + 'px';
						mao2.style.backgroundPositionY = -4 * (ev.pageY - 356.5) + 'px';
					}

				}

				mao1.onmouseover = function() {
					mao2.style.display = 'block';
					mao1in.style.display = 'block';
				}
				mao1.onmouseleave = function() {
					mao2.style.display = 'none';
					mao1in.style.display = 'none';
				}

				for(var i = 0; i < mao3img.length; i++) {

					mao3img[i].onmouseover = function() {
						var bgimg = this.src;
						var murl = bgimg;
						mao1.style.backgroundImage = 'url(' + murl + ')';
						mao2.style.backgroundImage = 'url(' + murl + ')';

					}
				}

			}
		</script>
